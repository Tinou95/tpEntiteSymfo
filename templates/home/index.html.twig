{# templates/home/index.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - My Symfony Project</title>
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
</head>
<body>

    <header>
        <h1>Welcome to the Symfony Forum</h1>
        <nav>
            <ul>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_login') }}">Login</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <h2>Categories</h2>
        <div class="categories">
            {% for category in categories %}
                <div class="category">
                    <h3>{{ category.name }}</h3>
                    <ul>
                        {% for topic in category.topics %}
                            <li>
                                <a href="#">{{ topic.title }}</a>
                                <p>{{ topic.content }}</p>
                                <h4>Replies:</h4>
                                <ul>
                                    {% for reply in topic.replies %}
                                        <li>{{ reply.content }}</li>
                                    {% endfor %}
                                </ul>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endfor %}
        </div>
    </main>

    <footer>
        <p>&copy; 2024 My Symfony Project</p>
    </footer>

</body>
</html>
