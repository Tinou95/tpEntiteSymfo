{# templates/category/show.html.twig #}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ category.name }} - Category</title>
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
</head>
<body>

    <header>
        <h1>{{ category.name }}</h1>
        <nav>
            <ul>
                <li><a href="{{ path('app_home') }}">Home</a></li>
                <li><a href="{{ path('app_home') }}">Back to Home</a></li> <!-- Added link to home -->
            </ul>
        </nav>
    </header>

    <main>
        <h2>Topics</h2>
        <ul>
            {% for topic in category.topics %}
                <li>
                    <h3>
                        <a href="{{ path('app_topic_show', { id: topic.id }) }}">{{ topic.title }}</a>
                    </h3>
                    <p>{{ topic.content }}</p>
                </li>
            {% endfor %}
        </ul>
    </main>

    <footer>
        <p>&copy; 2024 My Symfony Project</p>
    </footer>

</body>
</html>
